<%= form_for mail_contact, url: mail_contact_path, html: { class: "index-contact-form" } do |f| %>

	<% if mail_contact.errors.any? %>
		<%= render partial: 'visitor/partials/index/contact/model_errors', locals: { model: mail_contact } %>
	<% end %>

	<div class="form-group">
		<%= f.label :first_name %>
		<%= f.text_field :first_name, class: "form-control index-contact-form-input", placeholder: "First Name (required)", required: true, maxlength: 25 %>
	</div>

	<div class="form-group">
		<%= f.label :last_name %>
		<%= f.text_field :last_name, class: "form-control index-contact-form-input", placeholder: "Last Name (required)", required: true, maxlength: 50 %>
	</div>

	<div class="form-group">
		<%= f.label :email %>
		<%= f.email_field :email, class: "form-control index-contact-form-input", placeholder: "Email (required)", required: true, maxlength: 25 %>
	</div>

	<div class="form-group">
		<%= f.label :phone %>
		<%= f.phone_field :phone, class: "form-control index-contact-form-input", placeholder: "Phone (optional)" %>
	</div>

	<div class="form-group">
		<%= f.label :message %>
		<%= f.text_area :message, class: "form-control index-contact-form-input", rows: 5, placeholder: "Message (required)", required: true, minlength: 20, maxlength: 2047 %>
	</div>

	<%= f.button class: "btn index-contact-form-button" do %>
		<%= raw("#{fa_icon('paper-plane')} Send") %>
	<% end %>

<% end %>